<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivSkinImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/image_description"
        android:src="@android:drawable/ic_menu_gallery"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tvSkinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skin_name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWeapon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skin_weapon"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skin_rarity"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skin_price"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark"/>
    </LinearLayout>

</LinearLayout>
